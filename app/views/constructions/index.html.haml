%main#main
  / ======= Breadcrumbs =======
  %section#breadcrumbs.breadcrumbs
    .container
      .d-flex.justify-content-between.align-items-center
        %h2 Construction
        %ol
          %li
            = link_to 'Home', root_path
          %li
            = link_to 'Projects', constructions_path
  / End Breadcrumbs
  / ======= Portfolio Section =======
  %section#portfolio.portfolio
    .container
      .section-title
        %h2 施工事例
        %p Recent Projects
      .row
        .col-lg-12.d-flex.justify-content-center
          %ul#portfolio-flters
            %li.filter-active{"data-filter" => "*"} All
            %li{"data-filter" => ".filter-home"} 住宅
            %li{"data-filter" => ".filter-shop"} 店舗
            %li{"data-filter" => ".filter-other"} OTHER

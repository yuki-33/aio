%main#main
  / ======= Breadcrumbs =======
  %section#breadcrumbs.breadcrumbs
    .container
      .d-flex.justify-content-between.align-items-center
        %h2 Contact
        %ol
          %li
            = link_to 'Home', root_path
          %li Contact
  / End Breadcrumbs
  / ======= Contact Section =======
  %section#contact.contact
    .container
      %div
        %iframe{:allowfullscreen => "", :frameborder => "0", :src => "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d38639.537244131556!2d134.64980588182226!3d34.854611228702346!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x35551e29ee3320c3%3A0x53bfb3fe5f0d658f!2z77yI5pyJ77yJ44OV44K444Oi44OI44Kz44O844Od44Os44O844K344On44Oz!5e0!3m2!1sja!2sca!4v1599247175896!5m2!1sja!2sca", :style => "border:0; width: 100%; height: 270px;"}
      .row.mt-5
        .col-lg-4
          .info
            .address
              %i.bx.bxs-map
              %h4 Location:
              %p 兵庫県 姫路市 上手野 338-2
            .email
              %i.bx.bxs-envelope
              %h4 Email:
              = link_to "info@f-copo.com", "mailto:info@f-copo.com"
            .phone
              %i.bx.bxs-phone
              %h4 Call:
              = link_to "09014406947", "tel:09014406947"
        .col-lg-8.mt-5.mt-lg-0
          =form_with model: @contact, url: {controller: "home", action: "inquiry" }, method: :post, local: true, class: 'php-email-form' do |f|
            .form-row
              .col-md-6.form-group
                =f.text_field :name, placeholder: "Name", class: 'form-control'
                -# %input#name.form-control{"data-msg" => "Please enter at least 4 chars", "data-rule" => "minlen:4", :name => "name", :placeholder => "Your Name", :type => "text"}/
                -# .validate
              .col-md-6.form-group
                =f.email_field :email, placeholder: "Email", class: 'form-control'
                -# %input#email.form-control{"data-msg" => "Please enter a valid email", "data-rule" => "email", :name => "email", :placeholder => "Your Email", :type => "email"}/
                -# .validate
            .form-group
              =f.text_field :subject, placeholder: "Subject", class: 'form-control'
              -# %input#subject.form-control{"data-msg" => "Please enter at least 8 chars of subject", "data-rule" => "minlen:4", :name => "subject", :placeholder => "Subject", :type => "text"}/
              -# .validate
            .form-group
              =f.text_area :text, placeholder: "お気軽に何でもお尋ね下さい。 Feel free to text us.", rows: 5, class: 'textarea form-control'
              -# %textarea.form-control{"data-msg" => "Please write something for us", "data-rule" => "required", :name => "message", :placeholder => "Message", :rows => "5"}
              -# .validate
            -# .mb-3
            -#   .loading Loading
            -#   .error-message
            -#   .sent-message Your message has been sent. Thank you!
            .text-center
              =f.submit 'Send Message', class: 'button'
              -# %button{:type => "submit"} Send Message
  / End Contact Section
/ End #main

              .row.mb-2
                .col-lg-4.col-md-6
                  =image_tag @construction.image_3_url(:thumb)
        .row
          .col-sm-6
            =f.file_field :image_4
            -if @construction.image_4.present?
              .row
                .col-lg-4.col-md-6
                  =image_tag @construction.image_4_url(:thumb)
                  .checkbox.checkbox-primary
